<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:text="@string/hello_world_button"
        android:id="@+id/welcomebutton"
        android:onClick="doStart"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Choice_2"
        android:layout_alignStart="@+id/Choice_2"
        android:layout_alignRight="@+id/Choice_2"
        android:layout_alignEnd="@+id/Choice_2" />

    <Button
        android:layout_width="280dp"
        android:layout_height="66dp"
        android:text=""
        android:layout_gravity="bottom"
        android:id="@+id/Choice_1"
        android:onClick="Choose1"
        android:layout_above="@+id/Choice_2"
        android:layout_alignRight="@+id/Choice_2"
        android:layout_alignEnd="@+id/Choice_2"
        android:layout_alignLeft="@+id/Choice_2"
        android:layout_alignStart="@+id/Choice_2" />

    <Button
        android:layout_width="290dp"
        android:layout_height="66dp"
        android:text=""
        android:onClick="Choose2"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Choice_2" />

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcometext"
        android:layout_below="@+id/welcomebutton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Choice_1" />

</RelativeLayout>
